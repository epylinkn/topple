<div class="container-fluid" ng-controller="PlayCtrl">
  <div class="hud">
    <h1>Turns: {{ turns }}</h1>
    <h1>Matches: {{ matches.length }}</h1>
  </div>

  <div class="row">
    <div class="col-sm-9 board">

      <div class="card-container" ng-repeat="card in cards">
        <div class="card" ng-click="flip(card)">
          <div class="value" ng-class="{up: faceUp(card)}">
            {{ card.value }}
          </div>
        </div>
      </div>

    </div>

    <div class="col-sm-3 col-sm-offset-9 chat" ng-controller="ChatCtrl">

      <div class="messages">
        <div class="message">
          <span class="message-sender">faker</span>:
          <span class="message-body">fake body</span>
        </div>
        <div class="message" ng-repeat="msg in messages">
          <span class="message-sender">{{msg.sender}}</span>:
          <span class="message-body">{{msg.body}}</span>
        </div>
      </div>

      <div class="new-message">
        <input type="text" ng-model="body" ng-keydown="addMessage($event)"
               id="new_message" name="message" class="form-control"
               placeholder="Say it here..."/>
      </div>

    </div>
  </div>
</div>
